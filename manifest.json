{
  "manifest_version": 2,

  "name": "Pull Request counter",
  "description": "This extension will display the number of github Pull Request according to specific label",
  "version": "1.0",

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "https://*.github.com/*"
  ]
}
